# Big Office - Environment Configuration
# Copy this file to .env and update values

# Server Configuration
PORT=3000
NODE_ENV=production

# Security
SESSION_SECRET=change-this-to-a-random-string-in-production
JWT_SECRET=another-random-secret-key

# CORS - Allowed Origins (comma-separated)
ALLOWED_ORIGINS=https://yourdomain.com,https://www.yourdomain.com

# Database
DATABASE_PATH=./data/tenders.db
BACKUP_PATH=./data/backups

# Email Configuration (for alerts)
SMTP_HOST=smtp.gmail.com
SMTP_PORT=587
SMTP_USER=your-email@gmail.com
SMTP_PASS=your-app-password
SMTP_FROM=noreply@yourdomain.com

# Alert Settings
ALERT_CHECK_INTERVAL=86400000
# 86400000 ms = 24 hours

# File Upload Limits
MAX_FILE_SIZE=10485760
# 10485760 bytes = 10MB (documents)
MAX_LETTERHEAD_SIZE=5242880
# 5242880 bytes = 5MB (letterhead images)
MAX_PHOTO_SIZE=2097152
# 2097152 bytes = 2MB (officer photos)

# Upload Storage
UPLOAD_CLEANUP_INTERVAL=3600000
# 3600000 ms = 1 hour (orphaned file cleanup)
UPLOAD_TEMP_MAX_AGE=3600000
# 3600000 ms = 1 hour (max age for temp files)

# Rate Limiting
RATE_LIMIT_WINDOW=900000
# 900000 ms = 15 minutes
RATE_LIMIT_MAX_REQUESTS=100

# Logging
LOG_LEVEL=info
# Options: error, warn, info, debug

# Backup Schedule
AUTO_BACKUP=true
BACKUP_RETENTION_DAYS=30
